<% @movies.each do |movie| %>
    <section class="movie">
        <%= image_tag movie.image_file_name, class:"image" %>
        <div class="summary">
        <h2>
            <%= movie.title %>
        </h2>
        <h3>
            <%= total_gross(movie) %>
        </h3>
        <p>
            <%= truncate(movie.description, length: 150, separator: ' ') %>
        </p>
        </div>
        <%= link_to "#{movie.title}", movie %>
    </section>
<% end %>

<section class='admin'>
    <%= link_to "New Movie!", new_movie_path, class: "button" %> 
</section>